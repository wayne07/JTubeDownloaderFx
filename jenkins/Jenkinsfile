//# https://jenkins.io/doc/book/pipeline/
pipeline {
    /* insert Declarative Pipeline here */
    agent any

    environment {
        def JFXRT_HOME = "/opt/java/jdk1.8.0_162"
    }

    stages {
        stage('Clone sources') { // for display purposes
            steps {
                // Get some code from a GitHub repository
                dir('jtube') {
                    git url: 'https://github.com/wayne07/JTubeDownloaderFx.git'
                }
                dir('jenkinsJobs') {
                    git url: 'https://github.com/wayne07/jenkins-jobs.git'
                }
            }
        }
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'env'
                sh '$JAVA_HOME/bin/java -version'
                sh './jtube/gradlew build'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}